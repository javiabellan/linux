{
    "bootloader": "systemd-bootctl",
    "harddrives": [
        "/dev/nvme0n1"
    ],
    "hostname": "gtres",
    "kernels": [
        "linux-lts"
    ],
    "keyboard-layout": "us",
    "mirror-region": {
        "Spain": {
            "http://ftp.rediris.es/mirror/archlinux/$repo/os/$arch": true,
            "http://mirror.librelabucm.org/archlinux/$repo/os/$arch": true,
            "https://mirror.librelabucm.org/archlinux/$repo/os/$arch": true
        }
    },
    "nic": {
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "iso"
    },
    "ntp": true,
    "packages": ["zsh", "grml-zsh-config", "openssh", "git", "github-cli", "nvidia-lts"],
    "services": ["sshd"],
    "sys-encoding": "utf-8",
    "sys-language": "es_ES",
    "timezone": "Europe/Madrid"
}
